{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "volumes": {
    "data": {
      "mountPath" : "/data",
      "sizeMB" : 256
    }
  },
  "env": {
    "GOFIGURE_DATABASE_URL": "/data/gofigure.db",
    "DATABASE_PATH": "/data/mydb.sqlite"
  }
}